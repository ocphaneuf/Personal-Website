---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="text-center p-4 rounded-lg bg-dark-800/50 border border-dark-700">
  <div class="text-2xl md:text-3xl font-bold text-primary-400">
    {value}
  </div>
  <div class="text-sm text-dark-400 mt-1">
    {label}
  </div>
</div>
