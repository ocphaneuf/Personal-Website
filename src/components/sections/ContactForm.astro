---
import { siteConfig } from '@data/site-config';
---

<div class="max-w-xl mx-auto">
  <!-- CV Notice -->
  <div class="mb-8 p-4 rounded-lg bg-dark-800 border border-dark-700 text-center">
    <p class="text-dark-300">
      <span class="text-primary-400 font-medium">CV available on request.</span>
      <br />
      Please include your role and company in your message.
    </p>
  </div>

  <!-- Contact Form -->
  <form
    action={`https://formspree.io/f/${siteConfig.formspree.formId}`}
    method="POST"
    class="space-y-6"
  >
    <div>
      <label for="name" class="block text-sm font-medium text-dark-200 mb-2">
        Name <span class="text-primary-400">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-white placeholder-dark-400 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
        placeholder="Your name"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-dark-200 mb-2">
        Email <span class="text-primary-400">*</span>
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-white placeholder-dark-400 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
        placeholder="your@email.com"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-dark-200 mb-2">
        Message <span class="text-primary-400">*</span>
      </label>
      <textarea
        id="message"
        name="message"
        rows="5"
        required
        class="w-full px-4 py-3 bg-dark-800 border border-dark-600 rounded-lg text-white placeholder-dark-400 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors resize-none"
        placeholder="Your message..."
      ></textarea>
    </div>

    <!-- Honeypot for spam prevention -->
    <input type="text" name="_gotcha" style="display:none" />

    <button
      type="submit"
      class="w-full btn-primary py-4 text-lg"
    >
      Send Message
    </button>
  </form>

  <!-- Alternative Contact -->
  <div class="mt-8 text-center">
    <p class="text-dark-400">
      Or email me directly at{' '}
      <a href={`mailto:${siteConfig.urls.email}`} class="text-primary-400 hover:text-primary-300">
        {siteConfig.urls.email}
      </a>
    </p>
  </div>
</div>
